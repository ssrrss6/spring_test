<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="w1" class="com.zhang.spring6.bean.Women">
        <property name="name" value="xiaohua"/>
    </bean>
    <bean id="w2" class="com.zhang.spring6.bean.Women">
        <property name="name" value="xiaomei"/>
    </bean>
    <bean id="w3" class="com.zhang.spring6.bean.Women">
        <property name="name" value="xiaoxia"/>
    </bean>

    <bean id="yuqian" class="com.zhang.spring6.bean.QianDaye">
        <property name="hobby">
            <array>
                <value>抽烟</value>
                <value>喝酒</value>
                <value>烫头</value>
            </array>
        </property>

        <property name="women">
            <array>
                <ref bean="w1"/>
                <ref bean="w2"/>
                <ref bean="w3"/>
            </array>
        </property>
    </bean>


    <bean id="person" class="com.zhang.spring6.bean.Person">
        <property name="list">
            <list>
                <ref bean="w1"/>
                <ref bean="w2"/>
                <ref bean="w3"/>
            </list>
        </property>
    </bean>
</beans>